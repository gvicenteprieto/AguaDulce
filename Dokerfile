# 1. Base: runtime de ASP.NET 8 para producci√≥n
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

# 2. Build: SDK de .NET 8 para compilar
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY . .
RUN dotnet publish src/AguaDulce.Web/AguaDulce.Web.csproj \
    -c Release \
    -o /app/publish

# 3. Runtime: copiar el resultado y definir punto de entrada
FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "AguaDulce.Web.dll"]