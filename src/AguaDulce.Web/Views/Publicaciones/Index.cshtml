@model List<PublicacionModel>

    <section class="container py-5">
        <div id="carruselEditorial" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var pub = Model[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <a asp-controller="Publicaciones"
                       asp-action="Details"
                       asp-route-id="@pub.Id"
                       class="d-block text-decoration-none">
                        <img src="@pub.ImagenUrl"
                             class="d-block w-100 rounded"
                             alt="@pub.Titulo" />
                        <div class="carousel-caption
                        d-none d-md-block
                        bg-dark bg-opacity-50
                        rounded p-3 text-light">
                            <h5>@pub.Titulo</h5>
                            <p class="mb-0"><em>@pub.Subtitulo</em></p>
                            <p>@pub.Pie</p>
                        </div>
                    </a>
                </div>
                }
            </div>
            <button class="carousel-control-prev" …>Anterior</button>
            <button class="carousel-control-next" …>Siguiente</button>
        </div>
    </section>
