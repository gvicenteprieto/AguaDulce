@model List<AguaDulce.Web.Models.ServicioModel>
    @{
        ViewData["Title"] = "Servicios";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <section class="fade-in mb-5">
        <div class="mb-4">
            <h1 class="display-5 text-center">Nuestros Servicios</h1>
            <div class="container">
                <div class="row align-items-center">
                    <div style="font-size:1.1em; line-height:1.6;">
                        <p class="lead mt-5 text-left">
                            Ofrecemos la posibilidad de realizar diferentes combinaciones de actividades,
                            en un desarrollo de proyecto único y personalizado, creado para dar respuesta
                            a cada necesidad y a cada objetivo concreto.
                        </p>
                    </div>
                    <div class="row row-cols-1 row-cols-md-2 g-4 text-left">
                        @foreach (var servicio in Model)
                        {
                        <div class="col">
                            <a asp-action="Details"
                               asp-route-id="@servicio.Id"
                               class="text-decoration-none">

                                <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                        @* <p class="card-text">@servicio.Id</p> *@
                                        <h5 class="card-title mb-3 text-left">@servicio.Titulo</h5>
                                        <p class="card-text">@servicio.Descripcion</p>
                                        <span class="mobile-indicator d-md-none mt-2">
                                            <i class="fas fa-chevron-right"></i> Más información
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="container my-5 text-center">
        <div class="row g-4 g-md-5 p-5 py-md-5">
            <partial name="_NavigationLinks" />
        </div>
    </section>
