@using AguaDulce.Web.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<PublicacionModel>

    @{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <section class="fade-in text-center py-4 py-md-5">
        <a asp-controller="Servicios" asp-action="Index">
            <div class="text-center">
                <img src="~/img/newLogo.jpg" class="img-fluid rounded shadow w-80" alt="Logo Litoral" />
            </div>
        </a>
    </section>
    <section class="container my-4">
        <div class="row g-4 g-md-5 p-2 py-md-5">
            <!-- Quiénes Somos -->
            <div class="col-12 col-md-6 col-lg-6 my-md-3">
                <a asp-controller="Nosotros" asp-action="Index" class="nav-card">
                    <div class="card h-100 border-0 shadow-sm hover-effect text-secondary enlace-moderno">
                        <div class="card-body px-4 mt-3">
                            <i class="fas fa-users fa-2x mb-2 mr-2"></i>
                            <span class="mx-3">¿Quiénes somos?</span>
                            <div class="linea-divisoria"></div>
                            <p class="mt-3" style="font-size: 1.1em; line-height: 1.6">En Litoral, trabajamos con palabras e imágenes.</p>
                            <p class="mobile-indicator d-md-none masInfo">
                                <i class="fas fa-chevron-right"></i> Más información
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Cómo trabajamos -->
            <div class="col-12 col-md-6 col-lg-6 my-md-3">
                <a asp-controller="Trabajo" asp-action="Index" class="nav-card">
                    <div class="card h-100 border-0 shadow-sm hover-effect text-secondary enlace-moderno">
                        <div class="card-body px-4 mt-3">
                            <i class="fas fa-hands-helping fa-2x mr-2"></i>
                            <span class="mx-3">¿Cómo trabajamos?</span>
                            <div class="linea-divisoria"></div>
                            <p class="mt-3" style="font-size: 1.1em; line-height: 1.6">De forma personalizada, flexible y respetuosa.</p>
                            <p class="mobile-indicator d-md-none masInfo">
                                <i class="fas fa-chevron-right"></i> Más información
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Servicios -->
            <div class="col-12 col-md-6 col-lg-6 my-md-3">
                <a asp-controller="Servicios" asp-action="Index" class="nav-card ">
                    <div class="card h-100 border-0 shadow-sm hover-effect enlace-moderno">
                        <div class="card-body px-4 mt-3">
                            <i class="fas fa-pen-fancy fa-2x mr-2"></i>
                            <span class="mx-3">Servicios</span>
                            <div class="linea-divisoria"></div>
                            <p class="mt-3" style="font-size: 1.1em; line-height: 1.6">Conocé nuestros servicios</p>
                            <p class="mobile-indicator d-md-none masInfo">
                                <i class="fas fa-chevron-right"></i> Más información
                            </p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Contacto -->
            <div class="col-12 col-md-6 col-lg-6 my-md-3">
                <a asp-controller="Contacto" asp-action="Index" class="nav-card ">
                    <div class="card h-100 border-0 shadow-sm hover-effect enlace-moderno">
                        <div class="card-body px-4 mt-3">
                            <i class="fas fa-envelope fa-2x mr-2"></i>
                            <span class="mx-3">Contacto</span>
                            <div class="linea-divisoria"></div>
                            <p class="mt-3" style="font-size: 1.1em; line-height: 1.6">Hablemos sobre tu proyecto editorial.</p>
                            <p class="mobile-indicator d-md-none masInfo">
                                <i class="fas fa-chevron-right"></i> Más información
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Carrusel de textos -->
    <section class="container py-4 py-md-5">
        <div id="carruselTextos" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner rounded">
                @for (int i = 0; i < Model.Count; i++)
            {
                var pub = Model[i];
                var active = i == 0 ? "active" : "";
                <div class="carousel-item @active">
                    <div class="d-flex justify-content-center align-items-center text-center banner rounded mx-auto p-4" style="min-height: 250px; background-color: #f8f9fa;">
                        <div>
                            <h2 class="my-3 my-md-5">@pub.Titulo</h2>
                            @if (!string.IsNullOrWhiteSpace(pub.Subtitulo))
                            {
                            <h4 class="fst-italic text-muted">@pub.Subtitulo</h4>
                            }
                            @if (!string.IsNullOrWhiteSpace(pub.Pie))
                            {
                            <h6 class="mt-2 text-muted">@pub.Pie</h6>
                            }
                        </div>
                    </div>
                </div>
            }
            </div>

            @*<button class="carousel-control-prev" type="button" data-bs-target="#carruselTextos" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle p-3"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carruselTextos" data-bs-slide="next">
                    <span class="carousel-control-next-icon bg-dark rounded-circle p-3"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>*@
        </div>
    </section>
