    <section class="container py-5">
        <div id="carruselTextos" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count; i++)
      {
        var pub = Model[i];
        var active = i == 0 ? "active" : "";
                <div class="carousel-item @active">
                    <div class="d-flex justify-content-center align-items-center text-center
                      navbar-expand bg-secondary text-white rounded mx-auto"
                         style="min-height: 250px;">
                        <div  >
                            <h2 class="my-5">@pub.Titulo</h2>
                            @if (!string.IsNullOrWhiteSpace(pub.Subtitulo))
              {
                            <p class="fst-italic text-white">@pub.Subtitulo</p>
              }
                            @if (!string.IsNullOrWhiteSpace(pub.Pie))
              {
                            <small>@pub.Pie</small>
              }
                        </div>
                    </div>
                </div>
      }
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carruselTextos" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carruselTextos" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>
    </section>
