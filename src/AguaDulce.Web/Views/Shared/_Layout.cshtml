@using System
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty;
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty;

    Func<string, string, string> isActive = (ctrl, act) =>
        String.Equals(ctrl, currentController, StringComparison.OrdinalIgnoreCase)
        && String.Equals(act, currentAction, StringComparison.OrdinalIgnoreCase)
            ? "active"
            : string.Empty;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Litoral</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap & fuentes -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?
       family=Playfair+Display:wght@400;700&
       family=Montserrat:wght@400;700&
       display=swap"
          rel="stylesheet">
    <!-- Estilos -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid m-2">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/img/newLogo-img.jpg" class="imgLogo" alt="Logo Litoral Editorial" />
                </a>

                <div>
                    <a class="navbar-brand logo" asp-controller="Home" asp-action="Index">Litoral</a>
                </div>
                

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item mx-2">
                            <a class="nav-link @(isActive("Nosotros","Index"))" asp-controller="Nosotros" asp-action="Index">
                                <i class="fas fa-users fa me-2"></i>Quiénes Somos
                            </a>
                        </li>

                        <li class="nav-item mx-2">
                            <a class="nav-link @(isActive("Trabajo","Index"))" asp-controller="Trabajo" asp-action="Index">
                                <i class="fas fa-hands-helping fa me-2"></i>Cómo Trabajamos
                            </a>
                        </li>

                        <li class="nav-item mx-2">
                            <a class="nav-link @(isActive("Servicios","Index"))" asp-controller="Servicios" asp-action="Index">
                                <i class="fas fa-pen-fancy fa me-2"></i>Servicios
                            </a>
                        </li>

                        <li class="nav-item mx-2">
                            <a class="nav-link @(isActive("Contacto","Index"))" asp-controller="Contacto" asp-action="Index">
                                <i class="fas fa-envelope fa me-2"></i>Contacto
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container px-0">
        @RenderBody()
    </div>

    <footer class="border-top">


        <div class="container">
            <div class="row mt-3 d-flex justify-content-between">
                <div class="col-md-4 col-12 ">
                    <a class="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/Litoral_logo.jpg" class="imgLogoFooter mb-3" alt="Logo Litoral Editorial" />

                    </a>
                </div>

                @*<div class="col-md-4 text-center mt-5 mb-md-0  align-items-center">
                    <ul class="navbar-nav ms-auto mt-md-3 mb-lg-0">
                        <li class="mb-2 enlace-moderno"><a asp-controller="Nosotros" asp-action="Index" class="iconosLink">Quiénes Somos</a></li>
                        <li class="mb-2 enlace-moderno"><a asp-controller="Trabajo" asp-action="Index" class="iconosLink">Cómo Trabajamos</a></li>
                        <li class="mb-2 enlace-moderno"><a asp-controller="Servicios" asp-action="Index" class="iconosLink">Servicios</a></li>
                        <li class="mb-2 enlace-moderno"><a asp-controller="Contacto" asp-action="Index" class="iconosLink">Contacto</a></li>
                    </ul>
                </div>*@

                <div class="col-md-4 col-12">
                    <div class="navbar-nav  nav-link mt-md-5">
                        <div class="align-items-center enlace-moderno nav-link mt-md-3">
                            <i class="bi bi-envelope me-2 iconosLink"></i>
                            <p class="text-center">
                                litoral.servicios.editoriales@gmail.com
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-4">

        <div class="text-center">
            <p class="small text-center mb-0">
                &copy; @DateTime.Now.Year Litoral Servicios Editoriales. Todos los derechos reservados.
            </p>
        </div>
      
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>