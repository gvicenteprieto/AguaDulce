@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        setTimeout(function () {
            let alerta = document.querySelector('.alert-dismissible');
            if (alerta) alerta.classList.remove('show');
        }, 6000);
    </script>
}